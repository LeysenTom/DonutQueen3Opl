@using DonutQueen.ViewModels

@model ContactViewModel

<section class="b-block b-contact">
    <div class="container">
        <div class="row">
            <div class="col">
                <h3>Contact</h3>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="b-contact__form">
                    <form asp-controller="Contact" asp-action="" method="post">
                        <div class="form__group">
                            <label asp-for="@Model.Bericht.Voornaam" class="form__label">Voornaam</label>
                            <input asp-for="@Model.Bericht.Voornaam" type="text" class="form__control" placeholder="Voornaam" />
                        </div>
                        <div class="form__group">
                            <label asp-for="@Model.Bericht.Achternaam" class="form__label">Achternaam</label>
                            <input asp-for="@Model.Bericht.Achternaam" type="text" class="form__control" placeholder="Achternaam" />
                        </div>
                        <div class="form__group">
                            <label asp-for="@Model.Bericht.Email" class="form__label">Email</label>
                            <input asp-for="@Model.Bericht.Email" type="text" class="form__control" placeholder="Email" />
                        </div>
                        <div class="form__group">
                            <label asp-for="@Model.Bericht.Boodschap" class="form__label">Bericht</label>
                            <input asp-for="@Model.Bericht.Boodschap" type="text" class="form__control" placeholder="Bericht" />
                        </div>

                        <input type="submit" class="btn btn-primary" value="Verzenden" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>