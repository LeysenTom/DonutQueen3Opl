@using DonutQueen.ViewModels.AdminViewModels;

@model DonutViewModel

@{
    ViewData["Title"] = "Donuts - Donut Queen";
}

<section class="b-block b-donuts">
    <div class="container">
        <div class="row align-items-center mb-3">
            <div class="col">
                <h2>Donuts</h2>
            </div>
            <div class="col-auto">
                <a asp-controller="Admin" asp-action="Create" class="btn btn-primary">Nieuw</a>
            </div>
        </div>
        <div class="row">
            @if (Model.Donuts.Count > 0)
            {
                @foreach (Donut donut in Model.Donuts)
                {
                    <div class="col-12 mb-3">
                        <div class="donut__item">
                            <div class="item__image">
                                <img src="~/images/@donut.Afbeelding" />
                                </div>
                            <div class="item__name">
                                @donut.Naam
                            </div>
                            <div class="item__description">
                                @donut.Omschrijving
                            </div>
                            <div class="item__vulling">
                                @donut.Vulling
                            </div>
                            <div class="item__topping">
                                @donut.Topping
                            </div>
                            <div class="item__glazuur">
                                @donut.Glazuur
                            </div>
                            <div class="item__glazuur">
                                @donut.IsVegan
                            </div>

                            <div class="item__actions">
                                <div class="actions__details">
                                    <a asp-action="Details" asp-route-id="@donut.DonutId" class="btn btn-primary">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle-fill" viewBox="0 0 16 16">
                                            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
                                        </svg>
                                    </a>
                                </div>
                                <div class="actions__edit">
                                    <a asp-action="Edit" asp-route-id="@donut.DonutId" class="btn btn-primary">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                        </svg>
                                    </a>
                                </div>
                                <div class="actions__delete">
                                    <form asp-controller="Admin" asp-action="Delete" asp-route-id="@donut.DonutId" method="post">
                                        <input type="submit" value="Verwijderen" class="btn btn-primary" />
                                    </form>

                                    @* Alternatief *@
                                    @*                                     <a asp-action="Delete" asp-route-id="@donut.DonutId" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                            </svg>
                            </a> *@
                                </div>

                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>Geen donuts gevonden!</p>
            }
        </div>
    </div>
</section>